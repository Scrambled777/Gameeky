<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.16.0 -->
<interface>
  <!-- interface-name animation_row.ui -->
  <requires lib="gtk" version="4.12"/>
  <requires lib="libadwaita" version="1.4"/>
  <template class="AnimationRow" parent="AdwPreferencesGroup">
    <property name="header-suffix">
      <object class="GtkBox">
        <property name="spacing">10</property>
        <child>
          <object class="GtkButton">
            <property name="halign">center</property>
            <property name="icon-name">edit-copy-symbolic</property>
            <property name="tooltip-text">Clone</property>
            <property name="valign">center</property>
            <signal name="clicked" handler="on_clone_clicked"/>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="halign">center</property>
            <property name="icon-name">list-remove-symbolic</property>
            <property name="tooltip-text">Remove</property>
            <property name="valign">center</property>
            <signal name="clicked" handler="on_remove_clicked"/>
          </object>
        </child>
      </object>
    </property>
    <property name="title">Animation</property>
    <child>
      <object class="AdwComboRow" id="state_combo">
        <property name="model">
          <object class="GtkStringList">
            <property name="strings">default
destroyed
destroying
dropping
exhausted
held
idling
interacting
moving
taking
using</property>
          </object>
        </property>
        <property name="title">State</property>
      </object>
    </child>
    <child>
      <object class="AdwComboRow" id="direction_combo">
        <property name="model">
          <object class="GtkStringList">
            <property name="strings">any
east
north
south
west</property>
          </object>
        </property>
        <property name="title">Direction</property>
      </object>
    </child>
    <child>
      <object class="AdwExpanderRow">
        <property name="title">Details</property>
        <child>
          <object class="GtkBox" id="animation_box">
            <property name="orientation">vertical</property>
          </object>
        </child>
      </object>
    </child>
    <style>
      <class name="animation_row"/>
    </style>
  </template>
</interface>
