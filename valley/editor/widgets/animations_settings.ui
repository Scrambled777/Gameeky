<interface>
  <!-- interface-name animations_settings.ui -->
  <requires lib="gtk" version="4.12"/>
  <requires lib="libadwaita" version="1.1"/>
  <template class="AnimationsSettings" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="AdwPreferencesGroup">
        <property name="description">Add animations for different states and directions combinations</property>
        <property name="header-suffix">
          <object class="GtkButton" id="button">
            <property name="child">
              <object class="GtkImage">
                <property name="icon-name">list-add-symbolic</property>
              </object>
            </property>
            <property name="halign">center</property>
            <property name="valign">center</property>
            <signal name="clicked" handler="on_clicked"/>
          </object>
        </property>
        <property name="title">Animations</property>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="animations_box">
        <property name="orientation">vertical</property>
      </object>
    </child>
  </template>
</interface>
