<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.16.0 -->
<interface>
  <!-- interface-name scene_creation_window.ui -->
  <requires lib="gtk" version="4.12"/>
  <requires lib="libadwaita" version="1.4"/>
  <template class="SceneCreationWindow" parent="AdwWindow">
    <property name="content">
      <object class="AdwToolbarView">
        <property name="content">
          <object class="AdwClamp">
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="valign">center</property>
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdwEntryRow" id="path">
                        <property name="title">Data Path</property>
                        <child>
                          <object class="GtkBox">
                            <child>
                              <object class="GtkButton">
                                <property name="halign">end</property>
                                <property name="icon-name">folder-open-symbolic</property>
                                <property name="valign">center</property>
                                <signal name="clicked" handler="on_open_clicked"/>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwSpinRow" id="width">
                        <property name="adjustment">
                          <object class="GtkAdjustment">
                            <property name="lower">1.0</property>
                            <property name="step-increment">1.0</property>
                            <property name="upper">256.0</property>
                            <property name="value">30.0</property>
                          </object>
                        </property>
                        <property name="hexpand">True</property>
                        <property name="subtitle">The number of horizontal tiles</property>
                        <property name="title">Width</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwSpinRow" id="height">
                        <property name="adjustment">
                          <object class="GtkAdjustment">
                            <property name="lower">1.0</property>
                            <property name="step-increment">1.0</property>
                            <property name="upper">256.0</property>
                            <property name="value">22.0</property>
                          </object>
                        </property>
                        <property name="subtitle">The number of vertical tiles</property>
                        <property name="title">Height</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="label">Create</property>
                    <signal name="clicked" handler="on_create_clicked"/>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </property>
            <property name="hexpand">True</property>
          </object>
        </property>
        <style>
          <class name="dialog"/>
        </style>
        <!-- Custom fragments -->
        <child type="top">
          <object class="AdwHeaderBar">
</object>
        </child>
      </object>
    </property>
    <property name="default-height">600</property>
    <property name="default-width">800</property>
    <property name="title">New Scene</property>
    <!-- Custom fragments -->
  </template>
</interface>
