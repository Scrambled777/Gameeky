<interface>
  <!-- interface-name sound_row.ui -->
  <requires lib="gtk" version="4.12"/>
  <requires lib="libadwaita" version="1.4"/>
  <template class="SoundRow" parent="AdwPreferencesGroup">
    <property name="header-suffix">
      <object class="GtkBox">
        <property name="spacing">10</property>
        <child>
          <object class="GtkButton">
            <property name="halign">center</property>
            <property name="icon-name">edit-copy-symbolic</property>
            <property name="valign">center</property>
            <signal name="clicked" handler="on_clone_clicked"/>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="halign">center</property>
            <property name="icon-name">list-remove-symbolic</property>
            <property name="valign">center</property>
            <signal name="clicked" handler="on_remove_clicked"/>
          </object>
        </child>
      </object>
    </property>
    <property name="title">Sound</property>
    <child>
      <object class="AdwComboRow" id="state_combo">
        <property name="model">
          <object class="GtkStringList">
            <property name="strings">destroyed
destroying
dropping
exhausted
held
idling
interacting
moving
taking
using</property>
          </object>
        </property>
        <property name="title">State</property>
      </object>
    </child>
    <child>
      <object class="AdwExpanderRow">
        <property name="title">Details</property>
        <child>
          <object class="GtkBox" id="sound_box"/>
        </child>
      </object>
    </child>
    <style>
      <class name="sound_row"/>
    </style>
  </template>
</interface>
